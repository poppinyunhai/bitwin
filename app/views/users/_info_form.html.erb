 <div class="modal fade hide user_form_modal">
  <div class="modal-dialog">
    <div class="modal-content">
    	<%=form_tag info_update_users_path,  method: :put, :class => "form-horizontal", :multipart => true%>
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title">基本资料修改</h4>
	      </div>
	      <div class="modal-body">
	      	
	      	<div class="form-group">
				    <label class='control-label'>用户名:</label>
				  	<%=text_field_tag 'username'%>
			 	 </div>

<!-- 			 	 <div class="form-group">
				    <label class='control-label'>邮件地址:</label>
				  	<%=email_field_tag 'email'%>
			 	 </div> -->
	      	<div class="form-group">
				    <label class='control-label'>用户头像:</label>
				  	<%=file_field_tag :attachment, :accept=>"image/*"%>
			 	 </div>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
	        <button type="submit" class="btn btn-success">提交</button>
      </div>
    </div>
  </div>
</div>