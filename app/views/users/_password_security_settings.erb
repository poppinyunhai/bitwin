	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse" data-parent="#personal-center" href="#password-safe">
				<span>
				<img src="<%=image_url("user/key.png")%>" /></span>
				密码安全设置</a>
		</div>
		<div id="password-safe" class="accordion-body collapse">
				<div class="accordion-inner">		
					<div class="personal-line">
					<div class="personal-password-safe-half">
						<font class="personal-tittle">
							登入密码修改：
							<font class="color-orange" id='password-message'></font>
						</font>
					</div>
					<div class="personal-password-safe-half">
						<label>旧密码：</label>
						<input type="password" class="input-middle" id='current-password'/></div>
					<div class="personal-password-safe-button"></div>
				</div>

				<div class="personal-line">
					<div class="personal-password-safe-half">
					<label>新的密码：</label>
						<input type="password" class="input-middle" id='new-password'/>
					</div>
					<div class="personal-password-safe-half">
						<label>确认密码:</label>
						<input type="password" class="input-middle" id='new-password-confirm'/></div>
					<div class="personal-password-safe-button">
						<button class="bitwin-btn bitwin-btn-longth password">确定</button>
					</div>
				</div>

			<div class="personal-line">
				<div class="personal-password-safe-half">
					<font class="personal-tittle">
						安全提示问题：
						<font class="color-orange" id='question-message'>
					  	<%= current_user.question.nil?? '还没设置': '可以直接编辑修改答案'%>
					  </font>
				</font>
				</div>
				<div class="personal-password-safe-half">

				</div>
				<div class="personal-password-safe-button"></div>
			</div>

			<div class="personal-line">
				<div class="personal-password-safe-half">
				<%=select_tag 'question', options_from_collection_for_select(Question.all, :id, :description, current_user.question.try(:id)), class: "personal-area personal-selection-longth", :prompt => "请选择一个想要设置的安全问题"%>
				</div>
				<div class="personal-password-safe-half">
					<label>问题答案:</label>
					<input type="text" class="input-middle" id='answer-input' value='<%=current_user.answer.try :answer%>'/></div>
				<div class="personal-password-safe-button">
					<button class="bitwin-btn bitwin-btn-longth question">确定</button>
				</div>
			</div>


			<div class="personal-line">
				<div class="personal-password-safe-half">
					<font class="personal-tittle">
						交易密码：
						<font class="color-orange" id='trade-message'><%=current_user.trade_hash.nil? ? '还没设置': '已经设置' %></font>
					</font>
				</div>
				<div class="personal-password-safe-half">

				</div>
				<div class="personal-password-safe-button"></div>
			</div>


			<div class="personal-line">
				<%if current_user.trade_hash%>
					<p> <%=current_user.trade_hash%></p>
				<%else%>
					<div class="personal-password-safe-half">
						<label>新的交易密码：</label>
						<input type="password" class="input-middle" id='trade-password'/></div>
					<div class="personal-password-safe-half">
						<label>确认密码：</label>
						<input type="password" class="input-middle"  id='trade-password-confirm'/>
					</div>
					<div class="personal-password-safe-button">
						<button class="bitwin-btn bitwin-btn-longth trade-password">确定</button>
					</div>
					<%end%>
			</div>

			</div>
		</div>
	</div>